{
  "name": "phd-language-dialogue-experiment",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "interface:cli": "ts-node humanInterfaces/run",
    "build": "tsc",
    "ldo": "ldo build --input ./shapes --output ./ldo",
    "shacl2shex": "bash conversions/shacl2shex/convert.sh ./shapes",
    "shc2ttl": "node ./conversions/shaclc2ttl.js",
    "shc2shex": "npm run shc2ttl && npm run shacl2shex",
    "shapes": "ts-node ./conversions/shaclc2shex && npm run ldo && rm -rf ./shapes/*.ttl && rm -rf ./shapes/*.shex",
    "watch:shapes": "nodemon --watch shapes/*.shaclc -x \"npm run shapes\"",
    "watch:tsc": "tsc --watch",
    "watch": "run-p watch:*",
    "serve:interface:nigel": "ts-node humanInterfaces/run.ts -p 3008 -w http://localhost:3002/nigel#me -s http://localhost:3006/ -i cli",
    "serve:interface:jun": "ts-node humanInterfaces/run.ts -p 3007 -w http://localhost:3001/jun#me -s http://localhost:3005/ -i cli",
    "serve:interface": "ttab -t \"Nigel\" -d ./ -w npm run serve:interface:nigel && ttab -t \"Jun\" -d ./ -w npm run serve:interface:jun",
    "serve:agentServer:nigel": "ts-node agentServers/server.ts -p 3006 -w http://localhost:3002/nigel#me -s http://localhost:3008/ -u sampleData/nigelSchedule.trig",
    "serve:agentServer:jun": "ts-node agentServers/server.ts -p 3005 -w http://localhost:3001/jun#me -s http://localhost:3007/ -u sampleData/junSchedule.trig",
    "serve:agentServers": "run-p -l serve:agentServer:*",
    "serve:webIds:nigel": "rdf-serve sampleData/webIds/nigel -p 3002",
    "serve:webIds:jun": "rdf-serve sampleData/webIds/jun -p 3001",
    "serve:webIds": "run-p -l serve:webIds:*",
    "serve": "run-p serve:*"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.18.0",
    "@inquirer/prompts": "^4.3.0",
    "@jeswr/pretty-turtle": "^1.4.0",
    "@ldo/ldo": "^0.0.1-alpha.23",
    "@rdfjs/express-handler": "^1.0.0",
    "@rdfjs/term-set": "^1.0.0",
    "@shexjs/parser": "^1.0.0-alpha.28",
    "@types/shexj": "^2.1.7",
    "commander": "^12.0.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "event-emitter-promisify": "^1.1.0",
    "eventemitter": "^0.3.3",
    "events": "^3.3.0",
    "express": "^4.18.3",
    "eyereasoner": "^13.1.0",
    "n3": "^1.17.2",
    "rdf-dereference": "^2.2.0",
    "rdf-namespaces": "^1.12.0",
    "rdf-serve": "^1.1.0",
    "rdf-string-ttl": "^1.3.2",
    "rdf-transform": "^1.2.0",
    "readline": "^1.3.0",
    "rxjs": "^7.8.1",
    "shaclc-parse": "^1.4.0",
    "solid-namespace": "^0.5.3"
  },
  "devDependencies": {
    "@ldo/cli": "^0.0.1-alpha.23",
    "@rdfjs/types": "^1.1.0",
    "@shexjs/writer": "^1.0.0-alpha.27",
    "@solid/community-server": "^7.0.5",
    "@types/events": "^3.0.3",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/n3": "^1.16.4",
    "@types/rdfjs__express-handler": "^1.0.0",
    "@types/rdfjs__term-set": "^1.0.0",
    "@types/yargs": "^17.0.32",
    "esm": "^3.2.25",
    "inquirer": "^9.2.16",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "ttab": "^0.8.0",
    "typescript": "^5.4.2",
    "yargs": "^17.7.2"
  }
}
